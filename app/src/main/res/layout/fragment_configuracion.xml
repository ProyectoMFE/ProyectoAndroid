<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Configuracion.ConfiguracionFragment">

    <Button
        android:id="@+id/botonUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="148dp"
        android:backgroundTint="@color/azulComercio"
        android:text="Ir a usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputNombre"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edittextbackground"

        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds" />

    <EditText

        android:id="@+id/inputApellido2"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/inputApellido1"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/inputApellido1"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/inputCorreo" />

    <EditText
        android:id="@+id/inputCorreo"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"

        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/inputNombre"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="200dp"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="19dp"
        android:text="Correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="19dp"
        android:text="Apellido1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="19dp"
        android:text="Apellido2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/azulComercio"
        android:text="Cerrar Sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botonCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/azulComercio"
        android:text="Ir a categorias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>