<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prueba23" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azulComercio</item>
        <item name="android:navigationBarColor">@color/azulComercio</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/botonredondeado</item>
    </style>

    <style name="Theme.Prueba23.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Menu">
        <item name="colorPrimary">@color/azulComercio</item>
        <item name="android:background">@color/azulComercio</item>
    </style>

    <style name="Theme.Prueba23.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:tint">@color/black</item>
        <item name="android:icon">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Theme.Prueba23.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:icon">@color/black</item>
    </style>


    <style name="DrawerIcon" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>
</resources>